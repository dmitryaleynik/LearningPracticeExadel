{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
		"no-undef": 0,
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "prefer-const": [
            "error",
            {
            "destructuring": "any",
            "ignoreReadBeforeAssign": false
            }
        ],
        "no-var": "error",

        "no-new-object": "error",

        "no-array-constructor": "error",

        "object-shorthand": [
            "error",
            "always"
        ],

        "array-callback-return": "error",

        "quote-props": [
            "error",
            "as-needed"
        ],

        "prefer-template": "error",

        "template-curly-spacing": [
            "error",
            "never"
        ],
        "no-useless-escape": "error",

        "func-style": [
            "error",
            "expression",
            {
                "allowArrowFunctions": true
            }
        ],
        "no-loop-func": "error"

    }
}